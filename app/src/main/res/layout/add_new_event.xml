<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootLayout"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <ImageButton
                android:id="@+id/menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="220dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/M"
                android:scaleType="centerCrop"
                android:src="@drawable/menu" />

            <ImageButton
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="50dp"

                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/M"
                android:src="@drawable/equis" />


        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/add_new_event"
            android:textColor="#006691"
            android:textSize="25sp"
            tools:fontFamily="@font/montserrat_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="60dp" />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"
            tools:layout_editor_absoluteX="0"
            tools:layout_editor_absoluteY="98dp">

            <TextView
                android:id="@+id/user"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/name_of_event"
                tools:fontFamily="@font/montserrat_light" />


            <EditText
                android:id="@+id/nombre_input"
                android:layout_width="300dp"
                android:inputType = "text"
                android:layout_height="48dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#94D0D4D4"
                android:padding="10dp"
                android:background="@drawable/rounded"
                android:hint="@string/name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Calendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/calendar"
                android:textSize="18sp"
                tools:fontFamily="@font/montserrat_light" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="40dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_height="60dp">
                    <AutoCompleteTextView
                        android:id = "@+id/calendario_input"
                        android:layout_width="300dp"
                        android:backgroundTint="#94D0D4D4"
                        android:layout_height="match_parent"
                        android:hint="@string/calendar"
                        android:padding="16dp"
                        android:inputType="none">

                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>





            <TextView
                android:id="@+id/days_of_the_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="@string/day_of_the_week"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                tools:fontFamily="@font/montserrat_light" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/monday"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:contentDescription="@string/M"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#5E4263"
                    android:scaleType="centerCrop"
                    android:src="@drawable/m_pressed" />
                <ImageButton
                    android:id="@+id/tuesday"
                    android:layout_marginBottom="20dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/T"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/t" />
                <ImageButton
                    android:id="@+id/wednesday"
                    android:layout_marginBottom="20dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/W"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/w" />
                <ImageButton
                    android:id="@+id/thursday"
                    android:layout_marginBottom="20dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/T"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/t" />
               }

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:orientation="horizontal">




                <ImageButton
                    android:id="@+id/friday"
                    android:layout_marginBottom="20dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/F"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/f" />
                <ImageButton
                    android:id="@+id/saturday"
                    android:layout_marginBottom="20dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/M"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/s" />

                <ImageButton
                    android:id="@+id/sunday"
                    android:layout_marginBottom="20dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/M"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/s" />

            </LinearLayout>


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_allday"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="45dp"
                tools:fontFamily="@font/montserrat_light"
                android:textSize="18sp"
                android:text="@string/All_day" />







            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    android:textSize="16sp"
                    tools:fontFamily="@font/montserrat_light"
                    android:layout_marginEnd="10dp"/>
                <EditText
                    android:id="@+id/from_date"
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:backgroundTint="#94D0D4D4"
                    android:background="@drawable/rounded"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="@string/hora_cero"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:textSize="16sp"
                    tools:fontFamily="@font/montserrat_light"
                    android:layout_marginEnd="10dp"
                    />
                <EditText
                    android:id="@+id/to_date"
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:backgroundTint="#94D0D4D4"
                    android:background="@drawable/rounded"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="@string/hora_cero"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginStart="40dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_height="60dp">
                <AutoCompleteTextView
                    android:id = "@+id/reminder_frequency"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:hint="@string/Reminder"
                    android:padding="16dp"
                    android:backgroundTint="#94D0D4D4"
                    android:inputType="none">

                </AutoCompleteTextView>
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="17dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/notifications" />

            <TextView
                android:id="@+id/reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Reminder"
                android:textSize="15sp"
                tools:fontFamily="@font/montserrat_light" />


            <EditText
                android:id="@+id/reminder_minutes_input"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="7dp"
                android:backgroundTint="#94D0D4D4"
                android:background="@drawable/rounded"
                android:ems="15"
                android:hint="@string/cero"
                android:inputType="number" />

            <TextView
                android:id="@+id/before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/before"
                android:textSize="15sp"
                tools:fontFamily="@font/montserrat_light" />
        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="670dp"
        android:orientation="horizontal">



        <Button
            android:id="@+id/save"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            tools:fontFamily="@font/montserrat_medium"
            android:backgroundTint="@color/azul_bello"
            android:textColor="@color/white"
            android:text="@string/save" />


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>