<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/welcome_message"
            android:textSize="20sp"
            tools:fontFamily="@font/montserrat_light"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/upcoming_event" />

            <TextView
                android:id="@+id/upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upcoming_events"
                tools:fontFamily="@font/montserrat_light"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="145dp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#B2E8DAB6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora_not_1"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:fontFamily="@font/montserrat_light" />

            <LinearLayout
                android:layout_height="30dp"
                android:layout_width="335dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title9"
                    android:layout_width="260dp"
                    android:layout_height="20dp"
                    android:text="@string/event_not_1"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:fontFamily="@font/montserrat_light" />

                <ImageView
                    android:id="@+id/editar_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editar" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/rounded"
            android:backgroundTint="#DFF7C2"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/title101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora_not_2"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:fontFamily="@font/montserrat_light" />

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title10"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="@string/event_not_2"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:fontFamily="@font/montserrat_light" />

                <ImageView
                    android:id="@+id/editar_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/editar" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#C2F7E7"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/title102"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora_not_3"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:fontFamily="@font/montserrat_light" />

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title11"
                    android:layout_width="260dp"
                    android:layout_height="20dp"
                    android:text="@string/event_not_3"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:fontFamily="@font/montserrat_light" />

                <ImageView
                    android:id="@+id/editar_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/editar" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            tools:layout_editor_absoluteY="451dp">

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                tools:fontFamily="@font/montserrat_light"
                android:text="@string/weekly_view"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="145dp" />

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/arrow_back" />

            <TextView
                android:id="@+id/semana_vista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:fontFamily="@font/montserrat_light"
                android:text="@string/semana_mostrada"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="145dp" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_forward" />


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="#D0D4D4"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="480dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:backgroundTint="#D0D4D4"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/mon"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:fontFamily="@font/montserrat_light" />

                <TextView
                    android:id="@+id/title30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/tue"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:fontFamily="@font/montserrat_light" />

                <TextView
                    android:id="@+id/title31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/wed"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:fontFamily="@font/montserrat_light" />

                <TextView
                    android:id="@+id/title32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/thu"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:fontFamily="@font/montserrat_light" />

                <TextView
                    android:id="@+id/title33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/fri"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:fontFamily="@font/montserrat_light" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="620dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#40CFFF"
            tools:fontFamily="@font/montserrat_light"
            android:text="@string/your_calendars"
            android:textColor="#100000" />

        <Button
            android:id="@+id/button2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            tools:fontFamily="@font/montserrat_light"
            android:backgroundTint="#40CFFF"
            android:foregroundTint="#03A9F4"
            android:textColor="#100000"
            android:text="@string/new_habits" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>