<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#B84444">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/your_calendars"
            android:textSize="20sp"
            tools:fontFamily="@font/montserrat_light"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="60dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/created_by_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/gray"
                android:text="@string/created_by_you"
                android:textSize="17sp"
                tools:fontFamily="@font/montserrat_light"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="60dp" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/trash"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trash" />



                <Switch
                    android:id="@+id/calendar_1"
                    android:layout_width="200dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B14040"
                    android:text="@string/family"
                    android:textSize="17sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/trash2"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trash" />

            <Switch
                    android:id="@+id/calendar_2"
                    android:layout_width="200dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"

                    android:layout_height="wrap_content"
                    android:text="@string/personal"
                    android:textSize="17sp" />
        </LinearLayout>


        <ImageView
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/trash3"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/trash" />

            <Switch
                    android:id="@+id/calendar_3"
                    android:layout_width="200dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_height="wrap_content"
                    android:text="@string/work"
                    android:textSize="17sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/add"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/add" />
                <TextView
                    android:id="@+id/add_new_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:text="@string/add_new_event"
                    android:textSize="17sp"
                    tools:fontFamily="@font/montserrat_light"
                    tools:layout_editor_absoluteX="93dp"
                    tools:layout_editor_absoluteY="60dp" />


            </LinearLayout>
            <ImageView
                android:id="@+id/line5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />
            <TextView
                android:id="@+id/other"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:textColor="@color/gray"
                android:text="@string/other"
                android:textSize="17sp"
                tools:fontFamily="@font/montserrat_light"
                tools:layout_editor_absoluteX="93dp"
                tools:layout_editor_absoluteY="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">





                <Switch
                    android:id="@+id/colombian_holidays"
                    android:layout_width="239dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B14040"
                    android:text="@string/colombian_holiday"
                    android:textSize="17sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="550dp"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="618dp">


        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#2499C7"
            android:text="@string/new_habits" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>